@model Swishlist.Models.WishlistItem

<div class="row">
  <div class="col-xs-12 col-sm-3 col-lg-4">
    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-responsive" />
  </div>

  <div class="col-xs-12 col-sm-9 col-lg-8">
    <h3><a href="@Model.URL">@Model.Name</a></h3>
    <h4>ASIN: #@Model.Reference</h4>
    <p>@Model.Description</p>
  </div>
</div>
